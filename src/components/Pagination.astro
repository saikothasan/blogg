---
interface Props {
  currentPage: number;
  totalPages: number;
  baseUrl: string;
}

const { currentPage, totalPages, baseUrl } = Astro.props;

const prevPage = currentPage > 1 ? currentPage - 1 : null;
const nextPage = currentPage < totalPages ? currentPage + 1 : null;
---

<nav class="flex justify-center gap-4 my-12" aria-label="Pagination">
  {prevPage ? (
    <a
      href={`${baseUrl}${prevPage > 1 ? `/${prevPage}` : ''}`}
      class="px-6 py-3 text-sm font-medium text-primary-600 bg-white border border-primary-300 rounded-lg hover:bg-primary-50 transition-colors"
    >
      ← Previous
    </a>
  ) : null}
  
  {nextPage ? (
    <a
      href={`${baseUrl}/${nextPage}`}
      class="px-6 py-3 text-sm font-medium text-primary-600 bg-white border border-primary-300 rounded-lg hover:bg-primary-50 transition-colors"
    >
      Next →
    </a>
  ) : null}
</nav>