---
import Layout from './Layout.astro';
import TagCloud from '../components/TagCloud.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <article class="max-w-4xl mx-auto px-4 py-12">
    <div class="mb-12">
      {frontmatter.image && (
        <div class="aspect-video rounded-2xl overflow-hidden mb-8">
          <img
            src={frontmatter.image}
            alt={frontmatter.title}
            class="w-full h-full object-cover"
          />
        </div>
      )}
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">{frontmatter.title}</h1>
      <div class="flex flex-wrap items-center gap-4 text-gray-600 mb-6">
        <time class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
          </svg>
          {frontmatter.pubDate.toLocaleDateString()}
        </time>
        <span class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
          </svg>
          {frontmatter.author}
        </span>
      </div>
      {frontmatter.tags.length > 0 && (
        <TagCloud tags={frontmatter.tags} />
      )}
    </div>
    <div class="prose prose-primary lg:prose-lg mx-auto">
      <slot />
    </div>
  </article>
</Layout>